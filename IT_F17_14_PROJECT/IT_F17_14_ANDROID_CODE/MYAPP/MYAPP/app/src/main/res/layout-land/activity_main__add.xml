<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffbd4a"
    android:orientation="vertical"
    tools:context="com.example.mahpara.myapp.MainActivity_Add">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:title="Add Pet"
        app:titleTextColor="@android:color/background_light" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/insertImages"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/addimga" />

            <Button
                android:id="@+id/browse_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:onClick="browseImages"
                android:text="@string/browse_image"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/username_adpet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/enter_name"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/petname_adpet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:hint="@string/enter_pet_name"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/enteremail_adpet"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="@string/enter_email"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="12sp" />


            <Spinner
                android:id="@+id/spn1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:dropDownWidth="wrap_content"
                android:background="@drawable/spinner_background" />

            <Spinner
                android:id="@+id/spn2"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/spinner_background"/>

            <Spinner
                android:id="@+id/spn3"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/spinner_background"/>

            <Spinner
                android:id="@+id/spn4"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="1dp"
                android:background="@drawable/spinner_background" />



            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:onClick="uploadData"
                android:text="@string/upload_data"
                android:textColor="@android:color/black"
                android:textSize="12sp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>